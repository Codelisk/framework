<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Samples.MsalPage"
             Title="MSAL">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="MSAL Sign-In"
                Command="{Binding MsalSignIn}"
                Style="{StaticResource DefaultButton}"/>

            <Button Text="MSAL Sign-Out"
                Command="{Binding MsalSignOut}"
                Style="{StaticResource DefaultButton}"/>

            <Button Text="MSAL Refresh"
                Command="{Binding MsalRefresh}"
                Style="{StaticResource DefaultButton}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>